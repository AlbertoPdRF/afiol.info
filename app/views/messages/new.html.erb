<% provide(:title, t('.title')) %>

<section class="bg-primary" id="about">
  <div class="container">
    <div class="row">
      <div class="text-center">
        <h2 class="section-heading"><%= t('.title') %></h2>
        <hr class="light">
        <div class="contact-form" id="contact-form">
          <%= form_for @message, url: create_message_url do |f| %>

            <% if @message.errors.any? %>
              <div class="form-errors" id="form-errors">
                <p><%= t('.error') %></p>
                <ul>
                  <% @message.errors.full_messages.each do |m| %>
                    <li><%= m %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <%= f.label :name, t('.name') %>
            <%= f.text_field :name, placeholder: t('.name') %>

            <%= f.label :email, t('.email') %>
            <%= f.text_field :email, placeholder: t('.email') %>

            <%= f.label :subject, t('.subject') %>
            <%= f.text_field :subject, placeholder: t('.subject') %>

            <%= f.label :body, t('.body') %>
            <%= f.text_area :body, placeholder: t('.body') %>

            <%= f.submit t('.submit'), class: "btn btn-default btn-xl" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
